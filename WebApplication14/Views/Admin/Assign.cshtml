@model AssignRoleViewModel

<h2>Assign Roles to @Model.UserName</h2>

<form asp-action="Assign">
    <input type="hidden" name="UserId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (var role in Model.Roles)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="SelectedRoles" value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked" : "") />
                <label class="form-check-label">@role.Name</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Assign Roles</button>
</form>
